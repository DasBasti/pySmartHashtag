  "version": "2.0.0",
  "configurations": [
    {
      "name": "Engine status",
      "type": "python",
      "request": "launch",
      "module": "pysmarthashtag.cli",
      "args": ["status"],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Watch status",
      "type": "python",
      "request": "launch",
      "module": "pysmarthashtag.cli",
      "args": ["watch", "-i", "20"],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Disable climate",
      "type": "python",
      "request": "launch",
      "module": "pysmarthashtag.cli",
      "args": ["climate"],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Enable climate",
      "type": "python",
      "request": "launch",
      "module": "pysmarthashtag.cli",
      "args": ["climate", "--active"],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Disable Seatheating",
      "type": "python",
      "request": "launch",
      "module": "pysmarthashtag.cli",
      "args": ["seatheating"],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Enable Seatheating",
      "type": "python",
      "request": "launch",
      "module": "pysmarthashtag.cli",
      "args": ["seatheating", "--active"],
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    }
  ]
}
